<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.santiagoordonez.hackuoft.EventPage.EventPageFragment">

    <!-- Transparent layer -->
    <!--Increase the thickness of the this-->
    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:id="@+id/event_details_picture"
        />

    <RelativeLayout
        android:id="@+id/transparentOverlay2"
        android:layout_width="match_parent" android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="400dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/red_transparent" />

    <com.example.santiagoordonez.hackuoft.autoResize.AutoResizeTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="EventView X"
        android:ellipsize="none"
        android:layout_marginTop="400dp"
        android:gravity="center_horizontal"
        android:id="@+id/title"
        android:maxLines="1"
        android:textColor="#ffffff"
        android:textSize="40dp" /> <!-- maximum size -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="19/30/2089"
        android:id="@+id/date"
        android:textColor="#ffffff"
        android:gravity="center_horizontal"
        android:layout_marginTop="450dp"
        android:textSize="20dp"/>

</FrameLayout>

