<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.santiagoordonez.hackuoft.HackPage.HackPageFragment">

        <!-- Transparent layer -->
        <RelativeLayout
            android:id="@+id/transparentOverlay"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:background="@color/red_transparent" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:text="HACK THE VALLEY"
            android:id="@+id/position"
            android:textColor="#080808"
            android:gravity="top|center_horizontal"
            android:layout_marginTop="20dp"
            android:textSize="40dp"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="2016"
            android:id="@+id/year"
            android:textColor="#080808"
            android:layout_gravity="bottom"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="20dp"
            android:textSize="29dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Mississauga"
            android:id="@+id/city"
            android:textColor="#080808"
            android:layout_gravity="bottom"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="100dp"
            android:textSize="29dp"
            />

        <Button
            android:text="Check it Out"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="180dp"
            android:backgroundTint="#06954D"
            android:id="@+id/notify" />

        <!-- Transparent layer -->
        <RelativeLayout
            android:id="@+id/transparentOverlay2"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="155dp"
            android:background="@color/red_transparent" />


</FrameLayout>
